<?xml version="1.0" encoding="UTF-8"?>
<launch>
  <arg name="graph_folder" default="$(find sparse_map_utils)/graphs/"/>
  <arg name="graph_name" default="apartmentCoyo2.txt"/>
  <arg name="grid_folder" default="$(find sparse_map_utils)/maps/"/>
  <arg name="grid_name" default="apartmentCoyoGnd.yaml"/>

  <node name="map_server" pkg="map_server" type="map_server" output="screen" args="$(arg grid_folder)$(arg grid_name)"/>

  <node name="loc_amcl" pkg="amcl" type="amcl" output="screen" args="scan:=/hsrb/base_scan">
    <param name="odom_alpha1" value="0.4"/>
    <param name="odom_alpha2" value="0.4"/>
    <param name="odom_alpha3" value="0.4"/>
    <param name="odom_alpha4" value="0.4"/>
    <param name="odom_alpha5" value="0.5"/>
    <param name="initial_pose_x" value="0.0"/>
    <param name="initial_pose_y" value="0.0"/>
    <param name="initial_pose_a" value="0.0"/>
    <param name="update_min_a" value="0.1"/>
    <param name="laser_min_range" value="0.3"/>
    <param name="odom_model_type" value="omni-corrected"/>
  </node>

  <node name="sparse_server" pkg="sparse_map_server" type="sparse_map_server_node" output="screen">
    <param name="map_file" value="$(arg graph_folder)$(arg graph_name)" type="str"/>
    <param name="k_neighboors" value="6" type="int"/>
    <param name="max_dist" value="1.5" type="double"/>
    <param name="min_dist" value="0.3" type="double"/>
    <param name="safety_height" value="1.2" type="double"/>
    <param name="safety_radius" value="0.3" type="double"/>
    <param name="connection_radius" value="0.3" type="double"/>
    <param name="visualize_terminals" value="false" type="bool"/>
    <param name="validate_terminals" value="false" type="bool"/>
    <remap from="graph_marker" to="/hsrb/graph_marker"/>
    <remap from="make_plan" to="/sparse_map/make_plan"/>
  </node>

  <node name="motion_control" pkg="simple_move" type="simple_move_node" output="screen">
    <remap from="simple_move/goal_path" to="sparse_plan"/>
    <remap from="/hardware/mobile_base/cmd_vel" to="/hsrb/command_velocity"/>
  </node>
</launch>
